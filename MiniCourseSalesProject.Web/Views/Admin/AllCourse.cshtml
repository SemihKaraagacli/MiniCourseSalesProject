
@{
    ViewData["Title"] = "AllCourse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<CourseResponse>

<div class="content">
    <h1>Course Table</h1>
    <div class="table-container">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Decription</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Create Date</th>
                    <th scope="col">Update Date</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.CategoryName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.UpdatedDate</td>
                        <td>
                            <form class="btn-custom" asp-controller="Admin" asp-action="DeleteCourse" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger btn-custom">Delete</button>
                            </form>
                        </td>
                        <td>
                            <a class="btn btn-success btn-custom" asp-controller="Admin" asp-action="UpdateCourse" asp-route-id="@item.Id">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

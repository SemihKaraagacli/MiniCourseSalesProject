
@{
    ViewData["Title"] = "AllUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<UserResponse>

<div class="content">
    <h1>User Table</h1>
    <div class="table-container">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Wallet</th>
                    <th scope="col">Order Ids</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Username</td>
                        <td>@item.Email</td>
                        <td>@item.Wallet</td>
                        <td>
                            @foreach (var a in item.Orders)
                            {
                                <span>@a.Id</span>

                                <br />
                            }
                        </td>
                        <td>
                            <form class="btn-custom" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger btn-custom">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

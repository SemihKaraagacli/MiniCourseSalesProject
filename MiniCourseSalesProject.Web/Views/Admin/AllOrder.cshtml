@{
    ViewData["Title"] = "AllOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<OrderResponse>

<div class="content">
    <h1>Category Table</h1>
    <div class="table-container">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Course Ids</th>
                    <th scope="col">User Id</th>
                    <th scope="col">Total Amount</th>
                    <th scope="col">Order Status</th>
                    <th scope="col">Create Date</th>
                    <th scope="col">Update Date</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>
                            @foreach (var a in item.CourseIds)
                            {
                                <span>@a</span>

                                <br />
                            }
                        </td>
                        <td>@item.UserId</td>
                        <td>@item.TotalAmount</td>
                        <td>@item.Status</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.UpdatedDate</td>
                        <td>
                            <form class="btn-custom" asp-controller="Admin" asp-action="DeleteOrder" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger btn-custom">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
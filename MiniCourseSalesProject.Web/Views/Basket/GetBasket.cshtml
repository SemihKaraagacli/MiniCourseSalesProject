@model List<CourseFromBasketItemResponse>


@if (Model == null || Model.Count == null || !Model.Any())
{
    <p class="text-center text-muted">Sepetiniz boş.</p>
}

else
{
    <h1 class="text-center mb-3">My Basket</h1>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-0 rounded-3 mb-4 bg-white" style="min-height:200px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark fw-bold fs-5">@item.Name</h5>
                        <p class="card-text text-muted fs-6" style="line-height: 1.6;">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <p class="mb-0 text-dark fs-6">
                                <strong class="text-success">Price:</strong> <span class="fs-5">@item.Price₺</span>
                            </p>
                            <form asp-controller="Basket" asp-action="DeleteBasketItemFromBasket" method="post">
                                <input type="hidden" name="basketItemId" value="@item.BasketItemId" />
                                <input type="hidden" name="UserId" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />
                                <button type="submit" class="btn btn-danger btn-sm shadow-lg px-3 py-2 rounded-2 transition-all hover:bg-danger hover:text-white">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

   
    decimal totalAmount = 0;
    foreach (var price in Model)
    {
        totalAmount = totalAmount + price.Price;
    }

    <div class="text-end">
        <form asp-controller="Order" asp-action="CreateOrder" method="post">
            @foreach (var item in Model)
            {
                <input type="hidden" name="userId" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />
                <input type="hidden" name="basketId" value="@item.BasketId" />
            }
            <p class="fw-bold">Total:@totalAmount ₺</p>
            <button class="btn btn-primary">Create Order</button>
        </form>
        <form asp-controller="Basket" asp-action="DeleteBasket" method="post">
            @foreach (var item in Model)
            {
                <input type="hidden" name="BasketId" value="@item.BasketId" />
            }
            <button class="btn btn-danger mt-5">Delete Order</button>
        </form>
    </div>
}